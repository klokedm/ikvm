<Project>
  <PropertyGroup Label="NuGet Package Properties">
    <IsPackable>true</IsPackable>
    <PackageDescription>IKVM.NET is an implementation of Java for Mono and the Microsoft .NET Framework.</PackageDescription>
    <PackageTags>IKVM.NET;java;.NET;dotnet;ikvm;jdk;jni</PackageTags>
    <Authors>Marko Kokol, Semantika d.o.o. (based on work by Jeroen Frijters and Windward)</Authors>
    <RepositoryUrl>https://github.com/klokedm/ikvm</RepositoryUrl>
    <PackageProjectUrl>hhttps://github.com/klokedm/ikvm</PackageProjectUrl>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
  </PropertyGroup>
  <ItemGroup>
    <None Include="$(SolutionDir)$(PackageLicenseFile)" Pack="true" PackagePath="$(PackageLicenseFile)"/>
  </ItemGroup>
</Project>