<Project>
  <PropertyGroup Label="NuGet Package Properties">
    <IsPackable>true</IsPackable>
    <PackageDescription>.NET Core port of the IKVM.NET (alpha).</PackageDescription>
    <PackageTags>IKVM.NET;java;.NET;dotnet;ikvm;jdk;jni</PackageTags>
    <Authors>Semantika d.o.o. (based on work from Windward and Jeroen Frijters)</Authors>
    <RepositoryUrl>https://github.com/klokedm/ikvm/</RepositoryUrl>
    <PackageProjectUrl>https://github.com/klokedm/ikvm/</PackageProjectUrl>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
  </PropertyGroup>
  <ItemGroup>
    <None Include="$(SolutionDir)$(PackageLicenseFile)" Pack="true" PackagePath="$(PackageLicenseFile)"/>
  </ItemGroup>
</Project>